<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuartoApp.Pages.AccueilPage"
             Title="AccueilPage">
    <Grid RowDefinitions="*,Auto,Auto,Auto,*" >
        <Image Grid.Row="1"
            Source="dotnet_bot.png"
            HeightRequest="185"
            Aspect="AspectFit"/>
        <Label Grid.Row="2"
            Text="Quarto"
            HorizontalOptions="Center"
            FontSize="Title"/>

        <Button Grid.Row="3"
            Text="Start"
                Margin="50"
            HeightRequest="50"
            WidthRequest="100"
            BorderWidth="5"
            >
        </Button>
          <!--BorderColor="{StaticResource SilverGradient}" -> mis dans le button-->

    </Grid>
</ContentPage>