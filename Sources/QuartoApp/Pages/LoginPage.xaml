<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:QuartoApp.Views"
             x:Class="QuartoApp.Pages.LoginPage"
             xmlns:component="clr-namespace:QuartoApp.Views"
             Title="LoginPage"
             BackgroundImageSource="simple.png"
             Shell.NavBarIsVisible="False">
    <Grid
        ColumnDefinitions="*,*">
        <Image 
               Source="boardexemple.png"
               Margin="80, 0, 80, 0"/>
        <Grid Grid.Column="1"
              RowDefinitions="*, 2*, *"
              Margin="0, 0, 100, 0">
            
            <Image 
                   Source="quartologo.png"
                   Margin="0, 20, 0, 0"/>
            
            <Image Grid.Row="1"
                   Source="back.png"
                   Aspect="Fill"/>

            <Grid Grid.Row="1"
                  RowDefinitions="Auto,Auto, Auto">

                <HorizontalStackLayout  HorizontalOptions="Center"
                                        Margin="0,50,0,0">
                    <Label Style="{StaticResource LoginLabel}"
                           Text="Joueur 1 :"/>
                    <Entry Style="{StaticResource Login}"/>
                    
                </HorizontalStackLayout>

                <HorizontalStackLayout 
                                     Grid.Row="1" HorizontalOptions="Center">
                    <Label Style="{StaticResource LoginLabel}"
                           Text="Joueur 2 :"/>
                    <Entry Style="{StaticResource Login}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center">
                    <component:CustomButton2/>
                    <component:CustomButton2/>
                    <component:CustomButton2/>
                </HorizontalStackLayout>
                

            </Grid>

            

        </Grid>

        <HorizontalStackLayout Grid.ColumnSpan="2">
            <component:CustomButton WidthRequest="200"/>
            <component:CustomButton WidthRequest="200"/>
            <component:CustomButton WidthRequest="200"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>