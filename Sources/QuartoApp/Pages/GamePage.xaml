<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuartoApp.Pages.GamePage"
             xmlns:component="clr-namespace:QuartoApp.Views"
             xmlns:ext="clr-namespace:QuartoApp.Resources.Localization"
             Title="GamePage"
             xmlns:local="clr-namespace:QuartoApp"
             BackgroundImageSource="{Binding BackgroundImage}"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Double x:Key="VerticalSpacing">4</x:Double>
            <x:Double x:Key="HorizontalSpacing">4</x:Double>
            <DataTemplate x:Key="cellTemplate">
                <Grid BackgroundColor="Transparent">
                    <Label Text="test" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources> 
    
    <Grid RowDefinitions="*,8*,*">

        <component:CustomButton2  
            Text="{ext:LocalizedString Key=Sauvegarder}"
            WidthRequest="200" 
            HeightRequest="70" 
            HorizontalOptions="End"/>
        <Label Text="Text" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Grid ColumnDefinitions="*,*,*,*,*,*" 
              RowDefinitions="*,*,*,*,*,*"
              Grid.Row="1">

            <Image Grid.Row="1"
                   Grid.Column="1"
                   Grid.RowSpan="4"
                   Grid.ColumnSpan="4"
                   Source="board.png"
                   ZIndex="-1"/>

            <mylayouts:MatrixLayout
                Grid.Row="1"
                Grid.Column="1"
                Grid.RowSpan="4"
                Grid.ColumnSpan="4"
                BindableLayout.ItemTemplate="{StaticResource cellTemplate}" 
                BindableLayout.ItemsSource="{Binding FlatMatrix2d}"
                NbColumns="4"
                NbRows="4"
                BackgroundColor="Transparent"
                HorizontalOptions="Center" 
                VerticalOptions="Center"/>

        </Grid>
        
        <component:CustomButton2 
            Text="{ext:LocalizedString Key=Quarto}"
            Grid.Row="2" 
            WidthRequest="200" 
            HeightRequest="70" 
            HorizontalOptions="Center" 
            VerticalOptions="Center"/>

        <ImageButton BackgroundColor="Transparent"
             Grid.Row="2"
             HorizontalOptions="End"
             Margin="0,0,30,0"
             BorderColor="{StaticResource Gold}"
             BorderWidth="2"
             CornerRadius="90"
             WidthRequest="50"
             HeightRequest="50"
             Clicked="Settings_Clicked">
            <ImageButton.Source>
                <FontImageSource FontFamily="AwesomeSolid"
                                 Glyph="ï€“"
                                 Size="25"
                                 Color="{AppThemeBinding Dark={StaticResource Gold}, Light={StaticResource Silver}}"/>
            </ImageButton.Source>
        </ImageButton>
    </Grid>
</ContentPage>