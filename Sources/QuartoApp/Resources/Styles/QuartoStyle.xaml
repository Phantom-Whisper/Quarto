<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Entry" x:Key="Login">
        <Setter Property="Margin" Value="20,20,0,0"/>
        <Setter Property="Placeholder" Value="Entrer le pseudo"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource Gold}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="WidthRequest" Value="250"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
    </Style>

    <Style TargetType="Label" x:Key="LoginLabel">
        <Setter Property="Margin" Value="0,20,20,0"/>
        <Setter Property="TextColor" Value="{StaticResource Gold}"/>
        <Setter Property="FontSize" Value="35"/>
    </Style>
 
</ResourceDictionary>