<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuartoApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuartoApp"
    xmlns:pages="clr-namespace:QuartoApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="QuartoApp">

    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate pages:AccueilPage}"
        Route="AccueilPage" />

    <ShellContent
        Title="Credits"
        ContentTemplate="{DataTemplate pages:CreditsPage}"
        Route="Credits"/>
    
    <ShellContent
        Title="Regles"
        ContentTemplate="{DataTemplate pages:RulesPage}"
        Route="Regles" />

    <ShellContent
        Title="Win"
        ContentTemplate="{DataTemplate pages:WinPage}"
        Route="Win" />

    <ShellContent
        Title="Egality"
        ContentTemplate="{DataTemplate pages:EgalityPage}"
        Route="Egality" />

</Shell>
